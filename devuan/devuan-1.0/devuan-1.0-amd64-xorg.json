{
  "variables": {
    "vm_name": "Devuan-1.0-amd64-xorg",
    "mem_size": "1024",
    "disk_size": "51200",
    "iso_name": "devuan_jessie_1.0.0_amd64_NETINST.iso",
    "iso_path": "devuan/devuan_jessie/installer-iso",
