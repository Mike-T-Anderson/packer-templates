{
  "variables": {
    "box_version": "2017.05.03",
    "ssh_name": "root",
    "ssh_pass": "vagrant",
    "mem_size": "512",
    "disk_size": "40960",
    "variant": "minimal",
    "remote_host": "{{env `REMOTE_HOST`}}",
    "remote_username": "{{env `REMOTE_USERNAME`}}",
    "remote_password": "{{env `REMOTE_PASSWORD`}}",
    "remote_datastore": "{{env `REMOTE_DATASTORE`}}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "{{user `virtualbox_guest_os_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "iso_urls": [
        "iso/{{user `iso_image`}}",
        "http://archive.kernel.org/centos-vault/6.8/isos/{{user `hardware`}}/{{user `iso_image`}}"
      ],
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "shutdown -h now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{user `vm_name`}}-{{user `variant`}}-v{{user `box_version`}}",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `mem_size`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ],
        [ "modifyvm", "{{.Name}}", "--rtcuseutc", "on" ],
        [ "modifyvm", "{{.Name}}", "--nictype1", "virtio" ]
      ],
      "http_directory": "../http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ]
    },
    {
      "type": "vmware-iso",
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "0",
      "guest_os_type": "{{user `vmware_guest_os_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "iso_urls": [
        "iso/{{user `iso_image`}}",
        "http://archive.kernel.org/centos-vault/6.8/isos/{{user `hardware`}}/{{user `iso_image`}}"
      ],
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "shutdown -h now",
      "vm_name": "{{user `vm_name`}}-{{user `variant`}}-v{{user `box_version`}}",
      "vmx_data": {
        "memsize": "{{user `mem_size`}}",
        "numvcpus": "2",
        "ethernet0.present": "TRUE",
        "ethernet0.connectionType": "nat",
        "ethernet0.virtualDev": "e1000",
        "ethernet0.networkName": "VM Network",
        "ethernet0.wakeOnPcktRcv": "FALSE",
        "ethernet0.addressType": "generated",
        "remotedisplay.vnc.enabled": "TRUE",
        "vhv.enable": "TRUE"
      },
      "http_directory": "../http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ]
    },
    {
      "type": "vmware-iso",
      "name": "esxi-iso",
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "thin",
      "guest_os_type": "{{user `esxi_guest_os_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "iso_urls": [
        "iso/{{user `iso_image`}}",
        "http://archive.kernel.org/centos-vault/6.8/isos/{{user `hardware`}}/{{user `iso_image`}}"
      ],
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "shutdown -h now",
      "remote_type": "esx5",
      "remote_host": "{{user `remote_host`}}",
      "remote_username": "{{user `remote_username`}}",
      "remote_password": "{{user `remote_password`}}",
      "remote_datastore": "{{user `remote_datastore`}}",
      "output_directory": "{{user `vm_name`}}-{{user `variant`}}-v{{user `box_version`}}",
      "vm_name": "{{user `vm_name`}}-{{user `variant`}}-v{{user `box_version`}}",
      "vmx_data": {
        "memsize": "{{user `mem_size`}}",
        "numvcpus": "2",
        "ethernet0.present": "TRUE",
        "ethernet0.connectionType": "bridged",
        "ethernet0.virtualDev": "e1000",
        "ethernet0.networkName": "VM Network",
        "ethernet0.wakeOnPcktRcv": "FALSE",
        "ethernet0.addressType": "generated",
        "remotedisplay.vnc.enabled": "TRUE",
        "vhv.enable": "TRUE"
      },
      "http_directory": "../http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "only": ["virtualbox-iso"],
      "scripts": [
        "../provisioners/kernel_stuff-6.x.sh",
        "../provisioners/epel-6.x.sh",
        "../provisioners/virtualbox_dependencies-6.x.sh",
        "../provisioners/virtualbox.sh"
      ],
      "environment_vars": [
        "YUM_PLUGIN_PRIORITIES=1.1.30-40.el6"
      ]
    },
    {
      "type": "shell",
      "only": ["vmware-iso", "esxi-iso"],
      "scripts": [
        "../provisioners/epel-6.x.sh",
        "../provisioners/vmtools.sh"
      ],
      "environment_vars": [
        "YUM_PLUGIN_PRIORITIES=1.1.30-40.el6",
        "OPEN_VM_TOOLS=10.1.5-6.el6"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "../provisioners/sudo.sh",
        "../provisioners/vagrant.sh",
        "../provisioners/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "only": ["virtualbox-iso", "vmware-iso"],
      "output": "./{{user `vm_name`}}-{{user `variant`}}-v{{user `box_version`}}-{{ .Provider }}.box"
    }
  ]
}
