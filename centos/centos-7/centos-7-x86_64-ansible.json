{
  "variables": {
    "iso_name": "CentOS-7-x86_64-Minimal-1611.iso",
    "iso_checksum": "71a7aa147877b413497cdff5b1e0aa5bc0c9484f",
    "iso_checksum_type": "sha1",
    "mem_size": "512",
    "disk_size": "40960",
    "ssh_name": "root",
    "ssh_pass": "vagrant",
    "vagrant_username": "vagrant",
    "vagrant_password": "vagrant",
    "box_version": "7.3.20170701",
    "vm_name": "CentOS-7-x86_64-ansible"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "RedHat_64",
      "iso_urls": [
        "./iso/{{user `iso_name`}}",
        "http://ftp.iij.ad.jp/pub/linux/centos/7.3.1611/isos/x86_64/{{user `iso_name`}}"
      ],
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "shutdown -h now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{user `vm_name`}}-v{{user `box_version`}}",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `mem_size`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ],
        [ "modifyvm", "{{.Name}}", "--rtcuseutc", "on" ]
      ],
      "http_directory": "../http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "../provisioners/base-7.sh",
        "../provisioners/vagrant-parameterised.sh",
        "../provisioners/kernel_stuff-7-x86_64.sh",
        "../provisioners/epel-7-x86_64.sh",
        "../provisioners/virtualbox_dependencies-7.sh",
        "../provisioners/virtualbox.sh",
        "../provisioners/ansible+testinfra.sh",
        "../provisioners/disk_cleanup.sh",
        "../provisioners/cleanup.sh"
      ],
      "environment_vars": [
        "VAGRANT_USER={{user `vagrant_username`}}",
        "VAGRANT_PASSWORD={{user `vagrant_password`}}",
        "VAGRANT_GROUP={{user `vagrant_username`}}",
        "SUDO=sudo-1.8.6p7-20.el7",
        "BZIP2=bzip2-1.0.6-13.el7",
        "PERL=perl-5.16.3-291.el7",
        "GCC=gcc-4.8.5-11.el7",
        "ANSIBLE=ansible-2.3.1.0-1.el7",
        "PYTHON2_PIP=python2-pip-8.1.2-5.el7",
        "TESTINFRA=testinfra==1.5.5"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "./{{user `vm_name`}}-v{{user `box_version`}}.box"
    }
  ]
}
