{
  "variables": {
    "iso_name": "CentOS-7-x86_64-Minimal-1503-01.iso",
    "iso_checksum": "d07ab3e615c66a8b2e9a50f4852e6a77",
    "iso_checksum_type": "md5",
    "mem_size": "512",
    "disk_size": "40960",
    "ssh_name": "root",
    "ssh_pass": "vagrant",
    "vagrant_username": "vagrant",
    "vagrant_password": "vagrant",
    "box_version": "7.1.0",
    "vm_name": "CentOS-7-x86_64-docker"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "RedHat_64",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_urls": [
        "./iso/{{user `iso_name`}}",
        "http://archive.kernel.org/centos-vault/7.1.1503/isos/x86_64/{{user `iso_name`}}"
      ],
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "shutdown -h now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{user `vm_name`}}-v{{user `box_version`}}",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `mem_size`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ],
        [ "modifyvm", "{{.Name}}", "--rtcuseutc", "on" ]
      ],
      "http_directory": "../http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "../provisioners/base-7.1.sh",
        "../provisioners/sudo-7.1.sh",
        "../provisioners/vagrant-parameterised.sh",
        "../provisioners/kernel_stuff-7.1-x86_64.sh",
        "../provisioners/epel-7-x86_64.sh",
        "../provisioners/virtualbox_dependencies-7.0.sh",
        "../provisioners/virtualbox.sh",
        "../provisioners/docker-7.1.sh",
        "../provisioners/disk_cleanup.sh"
      ],
      "environment_vars": [
        "VAGRANT_USER={{user `vagrant_username`}}",
        "VAGRANT_PASSWORD={{user `vagrant_password`}}",
        "VAGRANT_GROUP={{user `vagrant_username`}}"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "./{{user `vm_name`}}-v{{user `box_version`}}.box"
    }
  ]
}
