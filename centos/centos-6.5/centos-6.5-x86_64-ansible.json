{
  "variables": {
    "hardware": "x86_64",
    "ssh_name": "root",
    "ssh_pass": "vagrant",
    "path_to_iso": "6.5/isos/x86_64/CentOS-6.5-x86_64-minimal.iso",
    "box_ver": "2017.05.03"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "10s",
      "disk_size": 512000,
      "guest_os_type": "RedHat_64",
      "iso_checksum": "0d9dc37b5dd4befa1c440d2174e88a87",
      "iso_checksum_type": "md5",
      "iso_urls": [
        "http://archive.kernel.org/centos-vault/{{user `path_to_iso`}}",
        "http://mirror.symnds.com/distributions/CentOS-vault/{{user `path_to_iso`}}",
        "http://bay.uchicago.edu/centos-vault/{{user `path_to_iso`}}",
        "http://mirror.nsc.liu.se/centos-store/{{user `path_to_iso`}}"
      ],
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "shutdown -h now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--rtcuseutc",
          "on"
        ]
      ],
      "http_directory": "../http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "../provisioners/sudo.sh",
        "../provisioners/vagrant.sh",
        "../provisioners/kernel_stuff-6.x.sh",
        "../provisioners/epel-6.x.sh",
        "../provisioners/virtualbox_dependencies-6.x.sh",
        "../provisioners/virtualbox.sh",
        "../provisioners/python-devel.sh",
        "../provisioners/ansible.sh",
        "../provisioners/cleanup.sh"
      ],
      "environment_vars": [
        "YUM_PLUGIN_PRIORITIES=1.1.30-40.el6",
        "PYTHON_LIBS=2.6.6-51.el6",
        "PYTHON=2.6.6-51.el6",
        "PYTHON_DEVEL=2.6.6-51.el6",
        "ANSIBLE=2.2.1.0-1.el6"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "./CentOS-6.5-{{user `hardware`}}-ansible-v{{user `box_ver`}}.box"
    }
  ]
}
