{
  "variables": {
    "ssh_name": "root",
    "ssh_pass": "vagrant"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "vm_name": "box",
      "boot_wait": "10s",
      "disk_size": 512000,
      "guest_os_type": "RedHat_64",
      "iso_checksum": "e3afe3f1121d69c40cc23f0bafa05e5d",
      "iso_checksum_type": "md5",
      "iso_url": "http://ftp.iij.ad.jp/pub/linux/centos/7.0.1406/isos/x86_64/CentOS-7.0-1406-x86_64-Minimal.iso",
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "shutdown -h now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--rtcuseutc",
          "on"
        ]
      ],
      "http_directory": "../http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "../provisioners/base.sh",
        "../provisioners/sudo-7.0.sh",
        "../provisioners/vagrant.sh",
        "../provisioners/perl.sh",
        "../provisioners/kernel_stuff-7.0.sh",
        "../provisioners/epel-7.0.sh",
        "../provisioners/virtualbox_dependencies-7.0.sh",
        "../provisioners/virtualbox.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "./CentOS-7.0-x86_64-minimal.box"
    }
  ]
}
