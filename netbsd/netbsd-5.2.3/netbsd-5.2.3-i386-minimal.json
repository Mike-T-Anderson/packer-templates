{
  "variables": {
    "ssh_username": "root",
    "path_to_iso_image": "NetBSD-5.2.3/iso/NetBSD-5.2.3-i386.iso",
    "iso_checksum": "0f555a7dde4d51ef82afe2e1f416d9eb3d534a04b783a6a3adc86fb400cfa0754f6fbbb6f990e04c3974ea4b6143e9a8672f8e70263d5950a91b3975bcbd8245",
    "iso_checksum_type": "sha512"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "10s",
      "disk_size": 10240,
      "guest_os_type": "NetBSD",
      "iso_urls": [
        "http://ftp.netbsd.org/pub/NetBSD/{{user `path_to_iso_image`}}",
        "http://mirror.planetunix.net/pub/NetBSD/{{user `path_to_iso_image`}}",
        "http://ftp7.de.NetBSD.org/pub/ftp.netbsd.org/pub/NetBSD/{{user `path_to_iso_image`}}",
        "https://ftp.ipv6.uni-leipzig.de/pub/ftp.netbsd.org/pub/NetBSD/{{user `path_to_iso_image`}}",
        "http://ftp.fr.NetBSD.org/pub/NetBSD/{{user `path_to_iso_image`}}",
        "http://ftp.availo.se/pub/NetBSD/{{user `path_to_iso_image`}}",
        "http://ftp.fi.NetBSD.org/pub/NetBSD/{{user `path_to_iso_image`}}"
      ],
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "vagrant",
      "ssh_key_path": "../key/vagrant_private_key",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -p now'|su -",
      "guest_additions_mode": "disable",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--rtcuseutc",
          "on"
        ]
      ],
      "http_directory": ".",
      "boot_command": [
        "1<wait10><wait5>",
        "a<enter><wait>",
        "a<enter><wait>",
        "a<enter><wait>",
        "b<enter><wait>",
        "<enter><wait>",
        "c<enter><wait>",
        "f<enter><wait>",
        "i<enter><wait>",
        "x<enter><wait>",
        "a<enter><wait>",
        "b<enter><wait>",
        "a<enter><wait>",
        "b<enter><wait>",
        "x<enter><wait>",
        "<enter><wait>",
        "b<enter><wait10>",
        "a<enter><wait>",
        "x<enter><wait>",
        "a<enter><wait>",
        "a<enter><wait>",
        "x<enter><wait10><wait10><wait10>",
        "<enter><wait>",
        "x<wait><enter><wait>",
        "d<enter><wait>",
        "a<enter><wait>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "a<enter><wait>",
        "<enter><wait>",
        "x<enter><wait>",
        "dhclient<enter><wait10>",
        "ftp -o /tmp/install.sh http://{{ .HTTPIP }}:{{ .HTTPPort }}/install.sh<enter><wait>",
        "HTTPSERVER={{ .HTTPIP }}:{{ .HTTPPort }} sh /tmp/install.sh<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "../provisioners/sudo.sh",
        "../provisioners/vagrant.sh",
        "../provisioners/rsync.sh",
        "../provisioners/cleanup.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'PKG_PATH=ftp://ftp.NetBSD.org/pub/pkgsrc/packages/`uname -s`/`uname -m`/`uname -r | cut -f1 -f2 -d.`/All/; export PKG_PATH' | cat - '{{.Path}}' | su -"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "./NetBSD-5.2.3-i386-minimal.box",
      "override": {
        "virtualbox": {
          "vagrantfile_template": "../vagrantfile/Vagrantfile.NetBSD"
        }
      }
    }
  ]
}
