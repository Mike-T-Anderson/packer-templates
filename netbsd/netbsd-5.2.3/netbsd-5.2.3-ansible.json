{
  "variables": {
    "ssh_username": "root",
    "os_ver": "5.2.3",
    "variant": "ansible",
    "box_ver": "1.1",
    "remote_host": "{{env `REMOTE_HOST`}}",
    "remote_username": "{{env `REMOTE_USERNAME`}}",
    "remote_password": "{{env `REMOTE_PASSWORD`}}",
    "remote_datastore": "{{env `REMOTE_DATASTORE`}}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "{{user `virtualbox_geust_os_type`}}",
      "iso_urls": [
        "{{user `iso_file_name`}}",
        "http://ftp.netbsd.org/pub/NetBSD/NetBSD-{{user `os_ver`}}/iso/{{user `iso_file_name`}}",
        "http://mirror.planetunix.net/pub/NetBSD/NetBSD-{{user `os_ver`}}/iso/{{user `iso_file_name`}}",
        "http://ftp7.de.NetBSD.org/pub/ftp.netbsd.org/pub/NetBSD/NetBSD-{{user `os_ver`}}/iso/{{user `iso_file_name`}}",
        "https://ftp.ipv6.uni-leipzig.de/pub/ftp.netbsd.org/pub/NetBSD/NetBSD-{{user `os_ver`}}/iso/{{user `iso_file_name`}}",
        "http://ftp.fr.NetBSD.org/pub/NetBSD/NetBSD-{{user `os_ver`}}/iso/{{user `iso_file_name`}}",
        "http://ftp.availo.se/pub/NetBSD/NetBSD-{{user `os_ver`}}/iso/{{user `iso_file_name`}}",
        "http://ftp.fi.NetBSD.org/pub/NetBSD/NetBSD-{{user `os_ver`}}/iso/{{user `iso_file_name`}}"
      ],
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "vagrant",
      "ssh_key_path": "../key/vagrant_private_key",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -p now'|su -",
      "guest_additions_mode": "disable",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `mem_size`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--rtcuseutc",
          "on"
        ]
      ],
      "http_directory": ".",
      "boot_command": [
        "1<wait10><wait5>",
        "a<enter><wait>",
        "a<enter><wait>",
        "a<enter><wait>",
        "b<enter><wait>",
        "<enter><wait>",
        "c<enter><wait>",
        "f<enter><wait>",
        "i<enter><wait>",
        "x<enter><wait>",
        "a<enter><wait>",
        "b<enter><wait>",
        "a<enter><wait>",
        "b<enter><wait>",
        "x<enter><wait>",
        "<enter><wait>",
        "b<enter>",
        "<wait10><wait10><wait10><wait10><wait10><wait10>",
        "<wait10><wait10><wait10><wait10><wait10><wait10>",
        "<wait10><wait10><wait10><wait10><wait10><wait10>",
        "<wait10><wait10><wait10><wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "a<enter><wait>",
        "x<enter><wait>",
        "a<enter><wait>",
        "a<enter><wait>",
        "x<enter><wait10><wait10><wait10>",
        "<enter><wait>",
        "x<wait><enter><wait>",
        "d<enter><wait>",
        "a<enter><wait>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "a<enter><wait>",
        "<enter><wait>",
        "x<enter><wait>",
        "dhclient<enter><wait10>",
        "ftp -o /tmp/install.sh http://{{ .HTTPIP }}:{{ .HTTPPort }}/install.sh<enter><wait>",
        "HTTPSERVER={{ .HTTPIP }}:{{ .HTTPPort }} HDD=wd0a sh /tmp/install.sh<enter><wait>"
      ]
    },
    {
      "type": "vmware-iso",
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "thin",
      "guest_os_type": "{{user `vmware_guest_os_type`}}",
      "iso_urls": [
        "{{user `iso_file_name`}}",
        "http://ftp.netbsd.org/pub/NetBSD/NetBSD-{{user `os_ver`}}/iso/{{user `iso_file_name`}}",
        "http://mirror.planetunix.net/pub/NetBSD/NetBSD-{{user `os_ver`}}/iso/{{user `iso_file_name`}}",
        "http://ftp7.de.NetBSD.org/pub/ftp.netbsd.org/pub/NetBSD/NetBSD-{{user `os_ver`}}/iso/{{user `iso_file_name`}}",
        "https://ftp.ipv6.uni-leipzig.de/pub/ftp.netbsd.org/pub/NetBSD/NetBSD-{{user `os_ver`}}/iso/{{user `iso_file_name`}}",
        "http://ftp.fr.NetBSD.org/pub/NetBSD/NetBSD-{{user `os_ver`}}/iso/{{user `iso_file_name`}}",
        "http://ftp.availo.se/pub/NetBSD/NetBSD-{{user `os_ver`}}/iso/{{user `iso_file_name`}}",
        "http://ftp.fi.NetBSD.org/pub/NetBSD/NetBSD-{{user `os_ver`}}/iso/{{user `iso_file_name`}}"
      ],
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "vagrant",
      "ssh_key_path": "../key/vagrant_private_key",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -p now'|su -",
      "remote_type": "esx5",
      "remote_host": "{{user `remote_host`}}",
      "remote_username": "{{user `remote_username`}}",
      "remote_password": "{{user `remote_password`}}",
      "remote_datastore": "{{user `remote_datastore`}}",
      "output_directory": "NetBSD-{{user `os_ver`}}-{{user `cpu`}}-{{user `variant`}}-v{{user `box_ver`}}",
      "vm_name": "NetBSD-{{user `os_ver`}}-{{user `cpu`}}-{{user `variant`}}-v{{user `box_ver`}}",
      "vmx_data": {
        "memsize": "{{user `mem_size`}}",
        "numvcpus": "2",
        "ethernet0.present": "TRUE",
        "ethernet0.connectionType": "bridged",
        "ethernet0.virtualDev": "e1000",
        "ethernet0.networkName": "VM Network",
        "ethernet0.wakeOnPcktRcv": "FALSE",
        "ethernet0.addressType": "generated",
        "remotedisplay.vnc.enabled": "TRUE",
        "vhv.enable": "TRUE"
      },
      "http_directory": ".",
      "boot_command": [
        "1<wait10><wait5>",
        "a<enter><wait>",
        "a<enter><wait>",
        "a<enter><wait>",
        "b<enter><wait>",
        "<enter><wait>",
        "c<enter><wait>",
        "d<enter><wait>",
        "f<enter><wait>",
        "i<enter><wait>",
        "x<enter><wait>",
        "a<enter><wait>",
        "b<enter><wait>",
        "a<enter><wait>",
        "b<enter><wait>",
        "x<enter><wait>",
        "<enter><wait>",
        "b<enter><wait10>",
        "<wait10><wait10><wait10><wait10><wait10><wait10>",
        "<wait10><wait10><wait10><wait10><wait10><wait10>",
        "<wait10><wait10><wait10><wait10><wait10><wait10>",
        "a<enter><wait>",
        "x<enter><wait>",
        "a<enter><wait>",
        "a<enter><wait>",
        "x<enter><wait10><wait10><wait10><wait10>",
        "<enter><wait>",
        "x<wait><enter><wait>",
        "d<enter><wait>",
        "a<enter><wait>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "a<enter><wait>",
        "<enter><wait>",
        "x<enter><wait>",
        "dhclient<enter><wait10>",
        "ftp -o /tmp/install.sh http://{{ .HTTPIP }}:{{ .HTTPPort }}/install.sh<enter><wait>",
        "HTTPSERVER={{ .HTTPIP }}:{{ .HTTPPort }} HDD=sd0a sh /tmp/install.sh<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "only": ["virtualbox-iso"],
      "scripts": [
        "../provisioners/sudo.sh",
        "../provisioners/vagrant.sh",
        "../provisioners/rsync.sh",
        "../provisioners/python27.sh",
        "../provisioners/ansible.sh",
        "../provisioners/cleanup.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'PKG_PATH=ftp://ftp.NetBSD.org/pub/pkgsrc/packages/`uname -s`/`uname -m`/5.2_2015Q1/All/; export PKG_PATH' | cat - '{{.Path}}' | su -"
        }
      }
    },
    {
      "type": "shell",
      "only": ["vmware-iso"],
      "scripts": [
        "../provisioners/sudo.sh",
        "../provisioners/vagrant.sh",
        "../provisioners/rsync.sh",
        "../provisioners/vmware-5.2.sh",
        "../provisioners/python27.sh",
        "../provisioners/ansible.sh",
        "../provisioners/cleanup.sh"
      ],
      "override": {
        "vmware-iso": {
          "execute_command": "echo 'PKG_PATH=ftp://ftp.NetBSD.org/pub/pkgsrc/packages/`uname -s`/`uname -m`/5.2_2015Q1/All/; export PKG_PATH' | cat - '{{.Path}}' | su -"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "only": ["virtualbox-iso"],
      "compression_level": 9,
      "output": "./NetBSD-{{user `os_ver`}}-{{user `cpu`}}-{{user `variant`}}-v{{user `box_ver`}}-{{.Provider}}.box",
      "vagrantfile_template": "../vagrantfiles/Vagrantfile.NetBSD"
    }
  ]
}
