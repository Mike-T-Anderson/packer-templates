{
  "variables": {
    "os_ver": "7.9.0",	
    "iso_path": "Linux/debian/debian-cdimage/archive/7.9.0/amd64/iso-cd/debian-7.9.0-amd64-netinst.iso",
    "iso_checksum": "774d1fc8c5364e63b22242c33a89c1a3",
    "vb_version": "4.3.28",
    "ssh_name": "root",
    "ssh_pass": "vagrant",
    "remote_host": "{{env `REMOTE_HOST`}}",
    "remote_username": "{{env `REMOTE_USERNAME`}}",
    "remote_password": "{{env `REMOTE_PASSWORD`}}",
    "remote_datastore": "{{env `REMOTE_DATASTORE`}}",
    "vm_name": "debian-7.9.0-amd64-docker"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "10s",
      "disk_size": 512000,
      "guest_os_type": "Debian_64",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "iso_urls": [
        "http://ftp.riken.jp/{{user `iso_path`}}"
      ],
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant' | sudo -S sh 'shutdown.sh'; rm -f shutdown.sh",
      "guest_additions_mode": "disable",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{user `vm_name`}}",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "512" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ],
        [ "modifyvm", "{{.Name}}", "--rtcuseutc", "on" ],
        [ "modifyvm", "{{.Name}}", "--vram", "32" ]
      ],
      "http_directory": "../http",
      "boot_command": [
        "<esc><wait>auto priority=critical preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "keymap=us <wait>",
        "tasks=standard <wait>",
        "<enter> <wait>"
      ]
    },
    {
      "type": "vmware-iso",
      "boot_wait": "10s",
      "disk_size": 512000,
      "disk_type_id": "thin",
      "guest_os_type": "debian7-64",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "iso_urls": [
        "http://ftp.riken.jp/{{user `iso_path`}}"
      ],
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant' | sudo -S sh 'shutdown.sh'; rm -f shutdown.sh",
      "remote_type": "esx5",
      "remote_host": "{{user `remote_host`}}",
      "remote_username": "{{user `remote_username`}}",
      "remote_password": "{{user `remote_password`}}",
      "remote_datastore": "{{user `remote_datastore`}}",
      "tools_upload_flavor": "linux",
      "output_directory": "{{user `vm_name`}}",
      "vm_name": "{{user `vm_name`}}",
      "vmx_data": {
      	"numvcpus": "2",
      	"memsize": "512",
      	"ethernet0.present": "TRUE",
        "ethernet0.connectionType": "nat",
        "ethernet0.virtualDev": "e1000",
        "ethernet0.networkName": "VM Network",
        "ethernet0.wakeOnPcktRcv": "FALSE",
        "ethernet0.addressType": "generated",
        "remotedisplay.vnc.enabled": "TRUE",
        "vhv.enable": "TRUE"
      },
      "http_directory": "../http",
      "boot_command": [
        "<esc><wait>auto priority=critical preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "keymap=us <wait>",
        "tasks=standard <wait>",
        "<enter> <wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "only": ["virtualbox-iso"],
      "scripts": [
        "../provisioners/base.sh",
        "../provisioners/vagrant.sh",
        "../provisioners/kernel-3.16.sh",
        "../provisioners/docker-io.sh",
        "../provisioners/virtualbox.sh",
        "../provisioners/cleanup.sh"
      ],
      "override": {
        "virtualbox-iso": {
        }
      },
      "environment_vars": [
        "VBOX_VER={{user `vb_version`}}"
      ]
    },
    {
      "type": "shell",
      "only": ["vmware-iso"],
      "scripts": [
        "../provisioners/base.sh",
        "../provisioners/vagrant.sh",
        "../provisioners/kernel-3.16.sh",
        "../provisioners/docker-io.sh",
        "../provisioners/vmtools.sh",
        "../provisioners/cleanup.sh"
      ],
      "override": {
        "vmware-iso": {
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "only": ["virtualbox-iso"],
      "output": "./{{user `vm_name`}}-{{ .Provider }}.box"
    }
  ]
}
