{
  "variables": {
    "os_ver": "7.8.0",
    "iso_path": "Linux/debian/debian-cdimage/archive/7.8.0/amd64/iso-cd/debian-7.8.0-amd64-netinst.iso",
    "iso_checksum": "a91fba5001cf0fbccb44a7ae38c63b6e",
    "ssh_name": "root",
    "ssh_pass": "vagrant",
    "box_ver": "2"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "10s",
      "disk_size": 512000,
      "guest_os_type": "Debian_64",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "iso_urls": [
        "http://ftp.riken.jp/{{user `iso_path`}}"
      ],
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant' | sudo -S sh 'shutdown.sh'; rm -f shutdown.sh",
      "guest_additions_mode": "disable",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "512" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ],
        [ "modifyvm", "{{.Name}}", "--rtcuseutc", "on" ],
        [ "modifyvm", "{{.Name}}", "--vram", "32" ]
      ],
      "http_directory": "../http",
      "boot_command": [
        "<esc><wait>auto priority=critical preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "keymap=us <wait>",
        "tasks=standard <wait>",
        "<enter> <wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "../provisioners/base.sh",
        "../provisioners/vagrant.sh",
        "../provisioners/cleanup.sh"
      ],
      "override": {
        "virtualbox-iso": {
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "./debian-{{user `os_ver`}}-amd64-minimal-v{{user `box_ver`}}.box"
    }
  ]
}
