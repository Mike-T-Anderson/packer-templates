{
  "variables": {
    "vm_name": "Debian-7.10.0-amd64-docker",
    "mem_size": "512",
    "disk_size": "102400",
    "iso_name": "mini.iso",
    "iso_path": "debian/dists/Debian7.10/main/installer-amd64/20130613+deb7u3+b1/images/netboot",
    "iso_checksum": "7ea1828d944918b0e2c0e12887a82b68",
    "ssh_name": "root",
    "ssh_pass": "vagrant",
    "remote_host": "{{env `REMOTE_HOST`}}",
    "remote_username": "{{env `REMOTE_USERNAME`}}",
    "remote_password": "{{env `REMOTE_PASSWORD`}}",
    "remote_datastore": "{{env `REMOTE_DATASTORE`}}",
    "virtualbox_version": "4.3.28"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "Debian_64",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "iso_urls": [
        "./{{user `iso_name`}}",
        "http://ftp.jp.debian.org/{{user `iso_path`}}/{{user `iso_name`}}",
        "http://cdimage.debian.org/{{user `iso_path`}}/{{user `iso_name`}}"
      ],
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant' | sudo -S sh 'shutdown.sh'; rm -f shutdown.sh",
      "guest_additions_mode": "disable",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{user `vm_name`}}",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `mem_size`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ],
        [ "modifyvm", "{{.Name}}", "--rtcuseutc", "on" ],
        [ "modifyvm", "{{.Name}}", "--vram", "32" ]
      ],
      "http_directory": "../http",
      "boot_command": [
        "<esc> <wait> install ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "debian-installer=en_US ",
        "auto ",
        "locale=en_US ",
        "kbd-chooser/method=us ",
        "keyboard-configuration/xkb-keymap=us ",
        "keyboard-configuration/layoutcode=us ",
        "netcfg/get_hostname={{ .Name }} ",
        "netcfg/get_domain=vagrantup.com ",
        "console-setup/ask_detect=false ",
        "console-keymaps-at/keymap=us ",
        "fb=false ",
        "debconf/frontend=noninteractive ",
        "hostname=vagrant <wait>",
        "<enter> <wait>"
      ]
    },
    {
      "type": "vmware-iso",
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "thin",
      "guest_os_type": "debian7-64",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "iso_urls": [
        "./{{user `iso_name`}}",
        "http://ftp.jp.debian.org/{{user `iso_path`}}/{{user `iso_name`}}",
        "http://cdimage.debian.org/{{user `iso_path`}}/{{user `iso_name`}}"
      ],
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant' | sudo -S sh 'shutdown.sh'; rm -f shutdown.sh",
      "remote_type": "esx5",
      "remote_host": "{{user `remote_host`}}",
      "remote_username": "{{user `remote_username`}}",
      "remote_password": "{{user `remote_password`}}",
      "remote_datastore": "{{user `remote_datastore`}}",
      "tools_upload_flavor": "linux",
      "output_directory": "{{user `vm_name`}}",
      "vm_name": "{{user `vm_name`}}",
      "vmx_data": {
        "numvcpus": "2",
        "memsize": "{{user `mem_size`}}",
        "ethernet0.present": "TRUE",
        "ethernet0.connectionType": "bridged",
        "ethernet0.virtualDev": "e1000",
        "ethernet0.networkName": "VM Network",
        "ethernet0.wakeOnPcktRcv": "FALSE",
        "ethernet0.addressType": "generated",
        "remotedisplay.vnc.enabled": "TRUE",
        "vhv.enable": "TRUE"
      },
      "http_directory": "../http",
      "boot_command": [
        "<esc> <wait> install ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "debian-installer=en_US ",
        "auto ",
        "locale=en_US ",
        "kbd-chooser/method=us ",
        "keyboard-configuration/xkb-keymap=us ",
        "keyboard-configuration/layoutcode=us ",
        "netcfg/get_hostname={{ .Name }} ",
        "netcfg/get_domain=vagrantup.com ",
        "console-setup/ask_detect=false ",
        "console-keymaps-at/keymap=us ",
        "fb=false ",
        "debconf/frontend=noninteractive ",
        "hostname=vagrant <wait>",
        "<enter> <wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "../provisioners/base.sh",
        "../provisioners/kernel-3.16.sh",
        "../provisioners/docker-io.sh"
      ]
    },
    {
      "type": "shell",
      "only": ["virtualbox-iso"],
      "scripts": [
        "../provisioners/virtualbox.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "{{ .Vars }} sudo -E sh -x {{ .Path }}"
        }
      },
      "environment_vars": [
        "VBOX_VER={{user `virtualbox_version`}}"
      ]
    },
    {
      "type": "shell",
      "only": ["vmware-iso"],
      "scripts": [
        "../provisioners/vmtools.sh"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "../provisioners/vagrant.sh",
        "../provisioners/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "only": ["virtualbox-iso"],
      "output": "./{{user `vm_name`}}-{{ .Provider }}.box"
    }
  ]
}

