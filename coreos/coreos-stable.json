{
  "variables": {
    "ssh_name": "core",
    "ssh_pass": "vagrant"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "vm_name": "box",
      "boot_wait": "40s",
      "disk_size": 80000,
      "guest_os_type": "RedHat_64",
      "iso_checksum": "c11035a4ed4b0727a72c4b92a4fa6807",
      "iso_checksum_type": "md5",
      "iso_url": "http://stable.release.core-os.net/amd64-usr/current/coreos_production_iso_image.iso",
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "20m",
      "shutdown_command": "echo '{{user `ssh_pass`}}' | sudo -S shutdown -h now",
      "guest_additions_path": "/tmp/VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": "/tmp/.vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "512" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ],
        [ "modifyvm", "{{.Name}}", "--rtcuseutc", "on" ],
        [ "modifyvm", "{{.Name}}", "--vram", "16" ]
      ],
      "boot_command": [
        "sudo useradd -m -k /usr/share/skel -G docker vagrant<enter>",
        "sudo passwd vagrant<enter>{{user `ssh_pass`}}<enter>{{user `ssh_pass`}}<enter>{{user `ssh_pass`}}<enter>",
        "sudo passwd core<enter>{{user `ssh_pass`}}<enter>{{user `ssh_pass`}}<enter>{{user `ssh_pass`}}<enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "install-stable.sh",
        "provision_base.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo '{{user `ssh_pass`}}' | sudo -S sh '{{.Path}}'"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "./CoreOS-stable.box"
    }
  ]
}
