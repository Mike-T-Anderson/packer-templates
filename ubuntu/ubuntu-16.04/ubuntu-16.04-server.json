{
  "variables": {
    "iso_name": "mini.iso",
    "iso_checksum": "ac54ff6690b3d4632f8d8726727d8b34",
    "iso_checksum_type": "md5",
    "ssh_name": "vagrant",
    "ssh_pass": "vagrant",
    "remote_host": "{{env `REMOTE_HOST`}}",
    "remote_username": "{{env `REMOTE_USERNAME`}}",
    "remote_password": "{{env `REMOTE_PASSWORD`}}",
    "remote_datastore": "{{env `REMOTE_DATASTORE`}}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "Ubuntu_64",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_urls": [
        "./iso/{{user `iso_name`}}",
        "http://archive.ubuntu.com/ubuntu/dists/xenial/main/installer-amd64/20101020ubuntu450/images/netboot/{{user `iso_name`}}"
      ],
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant' | sudo -S sh 'shutdown.sh'",
      "guest_additions_mode": "disable",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `mem_size`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ],
        [ "modifyvm", "{{.Name}}", "--rtcuseutc", "on" ],
        [ "modifyvm", "{{.Name}}", "--vram", "32" ]
      ],
      "http_directory": "../http",
      "boot_command": [
        "<tab><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "/linux ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `preseed`}}.cfg ",
        "debian-installer=en_US auto=true locale=en_US kbd-chooser/method=us ",
        "console-setup/ask_detect=false keyboard-configuration/layoutcode=us ",
        "hostname=vagrant ",
        "initrd=/initrd.gz quiet --- <enter>"
      ]
    },
    {
      "type": "vmware-iso",
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "thin",
      "guest_os_type": "ubuntu-64",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_urls": [
        "./iso/{{user `iso_name`}}",
        "http://archive.ubuntu.com/ubuntu/dists/xenial/main/installer-amd64/20101020ubuntu450/images/netboot/{{user `iso_name`}}"
      ],
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant' | sudo -S sh 'shutdown.sh'",
      "remote_type": "esx5",
      "remote_host": "{{user `remote_host`}}",
      "remote_username": "{{user `remote_username`}}",
      "remote_password": "{{user `remote_password`}}",
      "remote_datastore": "{{user `remote_datastore`}}",
      "tools_upload_flavor": "linux",
      "output_directory": "{{user `flavour`}}-{{user `os_ver`}}-{{user `variant`}}-amd64-minimal",
      "vm_name": "{{user `flavour`}}-{{user `os_ver`}}-{{user `variant`}}-amd64-minimal",
      "vmx_data": {
        "memsize": "{{user `mem_size`}}",
        "numvcpus": "2",
        "ethernet0.present": "TRUE",
        "ethernet0.connectionType": "bridged",
        "ethernet0.virtualDev": "e1000",
        "ethernet0.networkName": "VM Network",
        "ethernet0.wakeOnPcktRcv": "FALSE",
        "ethernet0.addressType": "generated",
        "remotedisplay.vnc.enabled": "TRUE",
        "vhv.enable": "TRUE"
      },
      "http_directory": "../http",
      "boot_command": [
        "<tab><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "/linux ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `preseed`}}.cfg ",
        "debian-installer=en_US auto=true locale=en_US kbd-chooser/method=us ",
        "console-setup/ask_detect=false keyboard-configuration/layoutcode=us ",
        "hostname=vagrant ",
        "initrd=/initrd.gz quiet --- <enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "only": [
      	"virtualbox-iso"
      ],
      "scripts": [
        "../provisioners/base.sh",
        "../provisioners/vagrant.sh",
        "../provisioners/virtualbox.sh",
        "../provisioners/cleanup.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S sh '{{.Path}}'"
        }
      },
      "environment_vars": [
        "VIRTUALBOX_VERSION={{user `virtualbox_version`}}"
      ]
    },
    {
      "type": "shell",
      "only": [
        "vmware-iso"
      ],
      "scripts": [
        "../provisioners/base.sh",
        "../provisioners/vagrant.sh",
        "../provisioners/vmware-server.sh",
        "../provisioners/cleanup.sh"
      ],
      "override": {
        "vmware-iso": {
          "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S sh '{{.Path}}'"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "only": [
      	"virtualbox-iso"
      ],
      "output": "./{{user `flavour`}}-{{user `os_ver`}}-{{user `variant`}}-amd64-minimal.box"
    }
  ]
}
