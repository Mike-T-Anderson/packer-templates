{
  "variables": {
    "iso_name": "",
    "iso_checksum": "",
    "iso_checksum_type": "",
    "ssh_name": "tc",
    "ssh_pass": "",
    "num_cpus": "2",
    "mem_size": "",
    "disk_size": "",
    "os_name": "",
    "cpu": "",
    "os_ver": "",
    "guest_os_type": "",
    "variant": "compiletc+x11",
    "box_version": "8.2.20170923",
    "headless": "false"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "{{user `guest_os_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_urls": [
        "./iso/{{user `iso_name`}}",
        "http://tinycorelinux.net/8.x/{{user `cpu`}}/release/{{user `iso_name`}}"
      ],
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "sudo filetool.sh -b; sudo poweroff",
      "guest_additions_mode": "disable",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{user `vm_name`}}-{{user `variant`}}",
      "headless": "{{user `headless`}}",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `mem_size`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "{{user `num_cpus`}}" ],
        [ "modifyvm", "{{.Name}}", "--rtcuseutc", "on" ],
        [ "modifyvm", "{{.Name}}", "--vram", "32" ],
        [ "modifyvm", "{{.Name}}", "--nictype1", "virtio" ]
      ],
      "http_directory": "../http",
      "boot_command": [
        "<enter><wait10>",
        "wget -O /tmp/install_{{user `cpu`}}.sh http://{{ .HTTPIP }}:{{ .HTTPPort }}/install_{{user `cpu`}}.sh<enter><wait>",
        "GRUB_ENTRY_NAME='{{user `os_name`}} {{user `os_ver`}}' sh -x /tmp/install_{{user `cpu`}}.sh<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "../provisioners/compiletc.sh",
        "../provisioners/x11.sh",
        "../provisioners/vagrant.sh",
        "../provisioners/cleanup.sh"
      ],
      "environment_vars": [
        "LINUX_API=4.8.1"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": "9",
      "output": "./{{user `vm_name`}}-{{user `variant`}}-v{{user `box_version`}}.box",
      "vagrantfile_template": "../vagrantfiles/Vagrantfile.tc"
    }
  ]
}
